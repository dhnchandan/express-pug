		"@types/pino": "^7.0.5",
		"@types/uuid": "^8.3.4",
		"commitizen": "^4.2.5",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.20.0",
		"eslint-config-prettier": "^8.5.0",
		"husky": "^8.0.1",
		"jest": "^28.1.3",
		"lint-staged": "^13.0.3",
		"prettier": "^2.7.1",
