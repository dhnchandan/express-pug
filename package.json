	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/grid-momenta/template-express-saas"
	},
	"_moduleAliases": {
		"@config": "config",
		"@src": "src",
		"@modules": "src/modules",
		"@middlewares": "src/middlewares",
		"@providers": "src/providers",
		"@utils": "src/utils",
		"@common": "src/common"
	}
